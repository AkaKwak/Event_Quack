<h1 class="text-3xl font-bold mb-6">Éditer le Profil</h1>

<%= form_with(model: @user, local: true, class: "space-y-4") do |form| %>
  <div class="mb-4">
    <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :first_name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :last_name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :email, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :profile_picture, "Photo de profil", class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :profile_picture, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm" %>
  </div>

  <%= form.submit "Mettre à jour le profil", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
<% end %>
