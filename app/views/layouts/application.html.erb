<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Event Quack" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>


  <body>
  <header>
    <!-- Navbar -->
    <nav class="bg-gray-800 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <!-- Logo -->
          <div class="flex-shrink-0 flex items-center">
            <%= link_to "Event Quack", root_path, class: "text-xl font-semibold text-white hover:text-gray-300" %>
          </div>

          <!-- Navigation Links -->
          <div class="hidden md:flex space-x-4 items-center">
            <%= link_to "Accueil", root_path, class: "hover:text-gray-300" %>
            <%= link_to "Événements", events_path, class: "hover:text-gray-300" %>

            <% if user_signed_in? %>
              <%= link_to "Mon Profil", edit_user_registration_path, class: "hover:text-gray-300" %>
              <%= link_to "Delete", destroy_user_session_path(@resource), class: "hover:text-gray-300", data: { turbo_method: :delete, turbo_confirm: "Êtes vous sûre ?" } %>
            <% else %>
              <%= link_to "Connexion", new_user_session_path, class: "hover:text-gray-300" %>
              <%= link_to "Inscription", new_user_registration_path, class: "hover:text-gray-300" %>
            <% end %>
          </div>

          <!-- Mobile Menu Button -->
          <div class="flex items-center md:hidden">
            <button id="mobile-menu-button" class="text-gray-400 hover:text-white focus:outline-none">
              <!-- Icone Menu Hamburger -->
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="md:hidden hidden">
        <%= link_to "Accueil", root_path, class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
        <%= link_to "Événements", events_path, class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>

        <% if user_signed_in? %>
          <%= link_to "Mon Profil", edit_user_registration_path, class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
        <% else %>
          <%= link_to "Connexion", new_user_session_path, class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <%= link_to "Inscription", new_user_registration_path, class: "block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white" %>
        <% end %>
      </div>
    </nav>

    <script>
      // Script pour gérer l'affichage du menu mobile
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script> 
  </header>
<div class="flash-messages">
  <% if flash[:notice] %>
    <p class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 my-4">
      <%= flash[:notice] %>
    </p>
  <% end %>

  <% if flash[:alert] %>
    <p class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 my-4">
      <%= flash[:alert] %>
    </p>
  <% end %>

  <% if flash[:error] %>
    <p class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 my-4">
      <%= flash[:error] %>
    </p>
  <% end %>
</div>



    <main class="container mx-auto mt-28 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
